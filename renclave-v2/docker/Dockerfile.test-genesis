# Test-specific Dockerfile for Genesis Boot testing
FROM rust:1.82-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    build-essential \
    pkg-config \
    libssl-dev \
    iproute2 \
    net-tools \
    jq \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy source code
COPY . .

# Build dependencies and run tests
RUN cargo build --release --workspace

# Set test environment
ENV RUST_LOG=info
ENV TEST_MODE=docker

# Copy test scripts
COPY docker/scripts/01-generate-keys.sh /app/scripts/
COPY docker/scripts/02-start-services.sh /app/scripts/
COPY docker/scripts/03-genesis-boot.sh /app/scripts/
COPY docker/scripts/04-distribute-shares.sh /app/scripts/
COPY docker/scripts/05-decrypt-shares.sh /app/scripts/
COPY docker/scripts/06-inject-shares.sh /app/scripts/
COPY docker/scripts/07-verify-results.sh /app/scripts/
COPY docker/scripts/run-complete-flow.sh /app/scripts/
RUN chmod +x /app/scripts/*.sh

# Default command
CMD ["/app/scripts/run-complete-flow.sh"]


